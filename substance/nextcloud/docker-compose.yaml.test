version: "3.7"  

# Common environment values
x-environment: &default-env
  TZ: $TZ
  PUID: $PUID
  PGID: $PGID

# Common keys
x-common-keys: &default-keys
  security_opt:
    - no-new-privileges:true
  restart: unless-stopped

secrets:
  db_password:
    file: $SECRETS_DIR/nextcloud_db_user
  db_root_password:
    file: $SECRETS_DIR/nextcloud_db_root

services:
  db:
    << : *default-keys
    image: mariadb:11
    networks:
      - nextcloud-backend
    volumes:
      - ./db:/var/lib/mysql
    secrets:
      - db_root_password
      - db_user_password
    environment:
      << : *default-env
      MYSQL_USER: nextcloud
      MYSQL_DATABASE: nextcloud
      MYSQL_ROOT_PASSWORD_FILE: /run/secrets/db_root_password
      MYSQL_PASSWORD_FILE: /run/secrets/db_user_password
    command: --transaction-isolation=READ-COMMITTED --log-bin=ROW --skip-innodb-read-only-compressed

  redis:
    << : *default-keys
    image: redis:alpine
    networks:
      - nextcloud-backend
    volumes:
      - $TZ_MOUNT
    environment:
      << : *default-env
    command: redis-server --requirepass $REDIS_PASSWORD

  app:
    << : *default-keys
    image: nextcloud:28
    networks:
      - web-proxy
      - nextcloud-backend
    depends_on:
      - db
      - redis
    volumes:
      - ./app/html:/var/www/html
      - ./app/config:/var/www/html/config
      - ./app/custom_apps:/var/www/html/custom_apps
      - ./app/themes:/var/www/html/themes
      - $NEXTCLOUD_DATA:/data/nextcloud
    secrets:
      - db_user_password
    environment:
      << : *default-env
      REDIS_HOST: redis
      REDIS_HOST_PASSWORD: $REDIS_PASSWORD
      MYSQL_HOST: db
      MYSQL_USER: nextcloud
      MYSQL_DATABASE: nextcloud
      MYSQL_PASSWORD_FILE: /run/secrets/db_user_password
      NEXTCLOUD_DATA_DIR: /data/nextcloud
      NEXTCLOUD_TRUSTED_DOMAIN: cloud.$DOMAINNAME
      TRUSTED_PROXIES: $NETWORK
    labels:
      - traefik.enable=true
      ## HTTPS Routers
      - traefik.http.routers.nextcloud.rule=Host(`cloud.${DOMAINNAME}`)
      - traefik.http.routers.nextcloud.entrypoints=websecure
      - traefik.http.routers.nextcloud.tls=true
      - traefik.http.routers.nextcloud.tls.certresolver=letsencrypt-do
      ## Middlewares for Nextcloud rewrites and headers
      - "traefik.http.middlewares.nc-rep.redirectregex.regex=https://(.*)/.well-known/(card|cal)dav"
      - "traefik.http.middlewares.nc-rep.redirectregex.replacement=https://$$1/remote.php/dav/"
      - "traefik.http.middlewares.nc-rep.redirectregex.permanent=true"
      - "traefik.http.middlewares.nc-header.headers.customFrameOptionsValue=SAMEORIGIN"
      - "traefik.http.middlewares.nc-header.headers.customResponseHeaders.Strict-Transport-Security=15552000"
      - "traefik.http.routers.nextcloud.middlewares=nc-rep,nc-header"

networks:
  nextcloud-backend:
  web-proxy:
    external: true

